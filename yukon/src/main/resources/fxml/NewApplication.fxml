<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.clayntech.yukon.controller.NewApplicationController">
   <center>
      <VBox prefWidth="400.0" spacing="10.0">
         <children>
            <VBox spacing="5.0">
               <children>
                  <Label text="Executable" />
                  <HBox spacing="5.0" VBox.vgrow="ALWAYS">
                     <children>
                        <TextField fx:id="pathField" HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" text="Select" onAction="#onSelectFile" />
                     </children>
                  </HBox>
               </children></VBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Name" />
                  <TextField fx:id="nameField" />
               </children></VBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
            <Button cancelButton="true" mnemonicParsing="false" onAction="#onCancel" text="Cancel" ButtonBar.buttonData="CANCEL_CLOSE" />
          <Button defaultButton="true" mnemonicParsing="false" text="Save" ButtonBar.buttonData="OK_DONE" onAction="#onSave"/>
        </buttons>
      </ButtonBar>
   </bottom>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</BorderPane>
