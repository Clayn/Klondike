<settings>
  <profiles>
    <profile>
      <id>gitlab</id>
      <servers>
        <server>
          <id>gitlab-maven</id>
          <configuration>
            <httpHeaders>
              <property>
                <name>Job-Token</name>
                <value>${env.CI_JOB_TOKEN}</value>
              </property>
            </httpHeaders>
          </configuration>
        </server>
      </servers>
    </profile>
    <profile>
      <id>github</id>
      <servers>
        <server>
          <id>github-maven</id>
          <username>USERNAME</username>
          <password>TOKEN</password>
        </server>
      </servers>
    </profile>
  </profiles>

</settings>